<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo"
    >

    <TextView
        android:id="@+id/popup_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/allergy_title"
        android:textStyle="bold"
        android:textSize="14sp"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/popup_subtitle_tv"
        android:layout_below="@id/popup_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/mcdonaldsWhite"
        android:text="@string/allergy_list"
        android:textSize="12sp"
        android:padding="4dp"/>


</RelativeLayout>